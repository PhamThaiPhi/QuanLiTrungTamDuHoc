@model IEnumerable<quanlytrungtam.Models.CHUCVU>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layouts/AdminLayout.cshtml";
}

<div id="content" class="container-fluid">
    <div class="card">
        <div class="card-header font-weight-bold d-flex justify-content-between align-items-center">
            <h5 class="m-0 ">Danh sách Chức Vụ</h5>
            <div class="form-search form-inline">
                <form id="box" action="#">
                    <input type="" class="form-control form-search" placeholder="Tìm kiếm">
                    <input type="submit" name="btn-search" value="Tìm kiếm" class="btn btn-primary">
                </form>
            </div>
        </div>
        <div class="card-body">

            <div class="form-action form-inline py-3">
                <select class="form-control mr-1" id="">
                    <option>Chọn</option>
                    <option>Tác vụ 1</option>
                    <option>Tác vụ 2</option>
                </select>
                <input type="submit" name="btn-search" value="Áp dụng" class="btn btn-primary">
            </div>
            <table class="table table-striped table-checkall text-center">
                <thead>
                    <tr>
                        <th scope="col">
                            <input name="checkall" type="checkbox">
                        </th>
                        <th scope="col">#</th>
                        <th scope="col">Mã Chuc Vụ</th>
                        <th scope="col">Tên Chức Vụ</th>
                        
                        <th scope="col">Tác vụ</th>
                    </tr>
                </thead>
                <tbody>
                  
                    @{var stt = 0;}
                    @foreach (var item in Model)
                    {
                        stt++;
                        <tr>
                            <td>
                                <input type="checkbox">
                            </td>
                            <td scope="row">@stt</td>
                            <td>@item.MACV</td>

                            
                            <td>@item.TENCV</td>
                            <td>
                                <a href="@Url.Action("editChucvu", "QuanLyChucVu",new {id=item.MACV })"> <button class="btn btn-success btn-sm rounded-0" type="button" data-toggle="tooltip" data-placement="top" title="Edit"><i class="fa fa-edit"></i></button></a>
                                <a href="@Url.Action("xoaChucvu", "QuanLyChucVu",new {id=item.MACV })"><button class="btn btn-danger btn-sm rounded-0" type="button" data-toggle="tooltip" data-placement="top" title="Delete"><i class="fa fa-trash"></i></button></a>
                               @* <a href="@Url.Action("dshslop", "QuanLyChucVu",new {id=item.MACV })"><button class="btn btn-primary btn-sm rounded-0" type="button" data-toggle="tooltip" data-placement="top" title="list"><i class="fa-sharp fa-light fa-users"></i></button></a>*@

                            </td>

                        </tr>
                        stt++;

                    }



                </tbody>
            </table>
            <nav aria-label="Page navigation example">
                <ul class="pagination">
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Previous">
                            <span aria-hidden="true">Trước</span>
                            <span class="sr-only">Sau</span>
                        </a>
                    </li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Next</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>



