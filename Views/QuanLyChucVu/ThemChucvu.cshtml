@model quanlytrungtam.Models.CHUCVU

@{
    ViewBag.Title = "ThemChucvu";
    Layout = "~/Views/Layouts/AdminLayout.cshtml";
}

<div id="content" class="container-fluid">
    <div class="card">
        <div class="card-header font-weight-bold">
            Thêm Chức Vụ
        </div>



        <div class="card-body">
            @using (Html.BeginForm("ThemChucvu", "QuanLyChucVu", FormMethod.Post, new { @enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <label for="name">Chức Vụ</label>
                    @*<input class="form-control" type="text" name="name" id="name">*@
                    @Html.EditorFor(model => model.TENCV, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TENCV, "", new { @class = "text-danger" })
                </div>
               
                <button type="submit" class="btn btn-primary">Thêm mới</button>
            }
        </div>
    </div>
</div>

