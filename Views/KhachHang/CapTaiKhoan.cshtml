@model quanlytrungtam.Models.KHACHHANG

@{
    ViewBag.Title = "Cấp Tài Khoản";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Use the appropriate layout
}

<div class="container">
    <h2>Cấp Tài Khoản</h2>

    <form method="post">
        @Html.AntiForgeryToken()

        <div class="form-group">
            <label for="hoten">Họ Tên:</label>
            <input type="text" class="form-control" id="hoten" name="hoten" value="@Model.HOTEN" readonly>
        </div>

        <div class="form-group">
            <label for="email">Email:</label>
            <input type="text" class="form-control" id="email" name="email" value="@Model.Email" readonly>
        </div>

        <!-- Add other form fields as needed -->

        <button type="submit" class="btn btn-primary">Cấp Tài Khoản</button>
    </form>
</div>
