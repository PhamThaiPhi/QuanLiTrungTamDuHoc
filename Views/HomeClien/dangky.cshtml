@model quanlytrungtam.Models.KHACHHANG
@{
    ViewBag.Title = "dangky";
    Layout = "~/Views/Layouts/HomeLayout.cshtml";
}

<section class="py-5">
    <div class="container text-center pt-5">

        <div class="row">

            <div class="col">
                @using (Html.BeginForm("dangky", "HomeClien", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <div class="p-2">
                        <h3 class="title" style="font-size: 35px; font-weight: bold;text-align: center;">Đăng ký Tài Khoản</h3>
                        <div class="input-group mb-3">
                            @Html.TextBoxFor(m => m.HOTEN, new { @class = "form-control", @placeholder = "Họ và tên", @aria_label = "Sizing example input", @aria_describedby = "inputGroup-sizing-default" })
                            @Html.ValidationMessageFor(model => model.HOTEN, "", new { @class = "text-danger" })
                        </div>
                        <div class="input-group mb-3">

                            @Html.TextBoxFor(m => m.SDT, new { @class = "form-control", @placeholder = "Số Điện Thoại", @aria_label = "Sizing example input", @aria_describedby = "inputGroup-sizing-default" })
                            @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
                        </div>
                        <div class="input-group mb-3">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email", @aria_label = "Sizing example input", @aria_describedby = "inputGroup-sizing-default" })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                        <div class="input-group mb-3">
                            @Html.TextBoxFor(m => m.DIACHI, new { @class = "form-control", @placeholder = "Địa Chỉ", @aria_label = "Sizing example input", @aria_describedby = "inputGroup-sizing-default" })
                            @Html.ValidationMessageFor(model => model.DIACHI, "", new { @class = "text-danger" })
                        </div>
                        <div class="input-group mb-3">

                            @Html.DropDownList("GIOITINH", new SelectList(new[] {
                           new SelectListItem { Value = "nam", Text = "Nam" },
                           new SelectListItem { Value = "nữ", Text = "Nữ" },

                       }, "Value", "Text"), "--- Chọn giới tính ---", new { @class = "form-control" })
                        </div>
                        <div class="input-group mb-3">
                            @Html.TextBoxFor(m => m.TAIKHOAN, new { @class = "form-control", @placeholder = "Tên Tài Khoản", @aria_label = "Sizing example input", @aria_describedby = "inputGroup-sizing-default" })
                            @Html.ValidationMessageFor(model => model.TAIKHOAN, "", new { @class = "text-danger" })
                        </div>
                        <div class="input-group mb-3">
                            @Html.TextBoxFor(m => m.MATKHAU, new { @class = "form-control", @placeholder = "Mật Khẩu", @aria_label = "Sizing example input", @aria_describedby = "inputGroup-sizing-default", Type = "password" })
                            @Html.ValidationMessageFor(model => model.MATKHAU, "", new { @class = "text-danger" })
                        </div>


                    </div>
                    <button type="submit" class="btn btn-primary btn-dathen mt-3">Đăng Ký</button>
                }
            </div>

            <div class="col">
                <div id="carouselExample" class="carousel slide">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="~/Content/images/slider-01.jpg" class="d-block w-100" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="~/Content/images/slider-02.jpg" class="d-block w-100" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="~/Content/images/slider-13.jpg" class="d-block w-100" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="~/Content/images/slider-15.jpg" class="d-block w-100" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="~/Content/images/slider-16.jpg" class="d-block w-100" alt="...">
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
                <div class="carousel-duoi mr-5">
                    <p class="logo1" style="font-size: 12px;margin-bottom: 1.5em;margin-left: -490px;">In cooperation with</p>
                    <img class="anhlogo" style="margin-left: -250px;" src="~/Content/images/UNIA_Logo-1.png" alt="">
                    <img src="~/Content/images/LOGO-Color-1000x1000-1.png" alt="" style="margin-left: 30px;" class="anhlogo1">
                </div>

            </div>
        </div>
    </div>
</section>



