@model quanlytrungtam.Models.LICHHENTUVAN

@{
    ViewBag.Title = "datlichtuvan";
    Layout = "~/Views/Layouts/HomeLayout.cshtml";
}

<section class="py-5">
    <div class="container text-center pt-5">

        <div class="row">

            <div class="col">
                @using (Html.BeginForm("datlichtuvan", "HomeClien", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                <div class="p-2">
                    <h3 class="title" style="font-size: 35px; font-weight: bold;text-align: center;">Nhận tư vấn miễn phí</h3>
                    <p style="text-align: center;margin-bottom: 1.5em;font-size: 19px;">Các tư vấn viên của <strong> Việt Đỉnh</strong> sẽ chủ động giới thiệu học <br> bổng phù hợp từ <strong>30 - 100%</strong>  học phí cho các bạn đến <br> làm hồ sơ tại <strong> Việt Đỉnh</strong></p>
                    <div class="input-group mb-3">
                        @Html.TextBoxFor(m => m.HOTEN, new { @class = "form-control", @placeholder = "Họ và tên", @aria_label = "Sizing example input", @aria_describedby = "inputGroup-sizing-default" })
                        @Html.ValidationMessageFor(model => model.HOTEN, "", new { @class = "text-danger" })
                    </div>
                    <div class="input-group mb-3">

                        @Html.TextBoxFor(m => m.SDT, new { @class = "form-control", @placeholder = "Số Điện Thoại", @aria_label = "Sizing example input", @aria_describedby = "inputGroup-sizing-default" })
                        @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
                    </div>
                    <div class="input-group mb-3">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email", @aria_label = "Sizing example input", @aria_describedby = "inputGroup-sizing-default" })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>

                    <div class="input-group mb-3">
                        <select id="BUOI" name="BUOI" class="form-select" id="inputGroupSelect01">
                            <option value="Bất cứ lúc nào" selected>Thời gian bạn muốn Việt Đỉnh gọi cho bạn?</option>
                            <option value="Buổi Sáng">Buổi sáng</option>
                            <option value="Buổi Chiều">Buổi chiều</option>
                            <option value="Buổi Tối">Buổi tối</option>
                            <option value="Bất cứ lúc nào">Bất cứ lúc nào</option>
                        </select>
                    </div>
                    @Html.HiddenFor(m => m.BUOIHEN, new { @id = "BUOIHEN" })

                    <div class="form-group">

                        <textarea name="GHICHU" class="form-control" placeholder="Vấn đề cần tư vấn"></textarea>
                        @*                @Html.TextAreaFor(model => model.MOTACHITIET, htmlAttributes: new { @class = "form-control" })
                        *@
                    </div>
                </div>
                    <button type="submit" class="btn btn-primary btn-dathen mt-3">Đặt hẹn</button>
                }
            </div>

            <div class="col">
                <div id="carouselExample" class="carousel slide">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="~/Content/images/slider-01.jpg" class="d-block w-100" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="~/Content/images/slider-02.jpg" class="d-block w-100" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="~/Content/images/slider-13.jpg" class="d-block w-100" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="~/Content/images/slider-15.jpg" class="d-block w-100" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="~/Content/images/slider-16.jpg" class="d-block w-100" alt="...">
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
                <div class="carousel-duoi mr-5">
                    <p class="logo1" style="font-size: 12px;margin-bottom: 1.5em;margin-left: -490px;">In cooperation with</p>
                    <img class="anhlogo" style="margin-left: -250px;" src="~/Content/images/UNIA_Logo-1.png" alt="">
                    <img src="~/Content/images/LOGO-Color-1000x1000-1.png" alt="" style="margin-left: 30px;" class="anhlogo1">
                </div>

            </div>
        </div>
    </div>
</section>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $("#BUOI").change(function () {
            $("#BUOIHEN").val($(this).val());
        });
    });
</script>